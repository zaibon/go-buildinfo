{
  "name": "go-buildinfo",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action to populate buildinfo for Go.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daaku/go-buildinfo"
  },
  "author": "Naitik Shah",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.11.2-alpha.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.16.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.0-next.2",
    "jest-circus": "^27.0.0-next.2",
    "js-yaml": "^3.14.1",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.0-next.2",
    "typescript": "^4.2.0-dev.20201229"
  }
}
